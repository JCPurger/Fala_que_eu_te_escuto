<!DOCTYPE html>
<html lang="pt-br">
<head>
  <%- include('./partials/head.ejs', {title: 'home'}); %>
</head>
<body>
  <%- include('./partials/nav.ejs'); %>
  <main class="main">
    <section class="secao_home shadow-lg">
      <form action="/salvar" method="GET">
        <input type="hidden" name="userName" value="<%= user.name %>">
        <input type="hidden" name="userPic" value="<%= user.imagePicture %>">
        <div class="form-floating">
          <textarea name="text" class="form-control text_area" placeholder="Fala que eu te escuto..." id="floatingTextarea2"></textarea>
          <label for="floatingTextarea2">Fala que eu te escuto...</label>
        </div>
        <div class="down_post">
          <div class="user">
            <img src=<%= user.imagePicture %> alt="" width="50px">
            <h2 class="username"><%= user.name %></h2>
          </div>
          <button type="submit" class="btn btn-success btn_post">POST</button>
        </div>
      </form>
    </section>
    
    <% posts.forEach(function(post){ %>
      <section class="secao_home shadow-lg">
        <div class="user">
          <img src="<%= post.authorPic %>" alt="" width="50px">
          <h2 class="username"><%= post.author %></h2>
        </div>
        <div class="txt_postado my-2 p-1">
          <%= post.text %>
        </div>
        <div class="down_text">
          <button type="button" class="btn btn-danger"><i class="bi bi-trash"></i></button>
          <button type="button" class="btn btn-primary"><i class="bi bi-hand-thumbs-up"></i></button>
        </div>
      </section>
    <% }); %>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>
